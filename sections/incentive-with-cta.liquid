<!-- TODO: FIX CENTERING ISSUES -->
<div class="grid page-width">

  <div class="grid__item one-tenth medium-up--one-tenth">
    <!-- Discount Banner -->
    <div class="discount-banner">
      <div class="discount-banner-image">
        <img src="{{ 'get-percent-off-banner.png' | asset_img_url: 'master' }}" width="101" height="123" alt="Discount Banner">
      </div>
      <div class="discount-banner-text">
        <div style="padding-top: 20px">
          <span>Get</span>
          <span>{{ section.settings.discount-amt }}</span>
          <span>Off</span>
        </div>
      </div>
    </div>
  </div>
  <div class="grid__item medium-up--seven-tenths">
    <!-- CTA Copy -->
    <div class="medium-up--show text-center" style="padding: 33px; margin-top: 4px; display: none">
      <span>Buy Perky Jerky At A Location Near You And Get {{ section.settings.discount-amt}} Off.</span>
    </div>
  </div>

  <div class="grid__item nine-tenths medium-up--two-tenths text-center medium-up--text-right">
    <!-- CTA Button -->
    <a class="btn button__btn button__btn--primary small--hide" href="{{ pages.storefinder.url }}" style="margin-top: 29px">
      {{ section.settings.button-label }}
    </a>
  </div>

</div>

{% schema %}
  {
    "name": "Call-to-Action incentive",
    "settings": [
      {
        "type": "text",
        "label": "Button Label",
        "id": "button-label"
      },
      {
        "type": "text",
        "label": "Discount Amount",
        "id": "discount-amt"
      }
    ]
  }
{% endschema %}