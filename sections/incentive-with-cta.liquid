<div class="grid page-width h-100">

  <div class="grid__item three-quarters h-100">
  <div style="position: relative;">
    <div style="position: absolute; margin-top: -1.25px">
      <img src="{{ 'get-percent-off-banner.png' | asset_img_url: '101x123' }}" width="101" height="123" alt="Banner">
    </div>
  </div>
  <div class="text-right h-100 small--hide">
  <div class="v-center" style="margin-top: -9px">
    <span style="font-size: 19px;">{{ section.settings.copy}}</span>
  </div>
  </div>
  </div>

  <div class="grid__item one-quarter text-right h-100">
  <div class="v-center" style="margin-top: -19px">
    <a class="btn button__btn button__btn--primary" href="{{ pages.storefinder.url }}">{{ section.settings.button-label }}</a>
  </div>
  </div>

</div>

{% schema %}
  {
    "name": "Call-to-Action incentive",
    "settings": [
      { 
        "type": "text",
        "label": "Text",
        "id": "copy"
      },
      {
        "type": "text",
        "label": "Button Label",
        "id": "button-label"
      },
      {
        "type": "text",
        "label": "Discount",
        "id": "discount"
      }
    ]
  }
{% endschema %}