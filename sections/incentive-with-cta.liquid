<div class="grid page-width h-100">

  <div class="grid__item three-quarters h-100">
  <div style="position: relative;">
    <div style="position: absolute">
      <img src="http://via.placeholder.com/101x123" width="101" height="123" alt="Banner">
    </div>
  </div>
  <div class="text-right h-100 small--hide">
  <div class="v-center" style="margin-top: -9px">
    <span style="font-size: 19px;">{{ section.settings.copy}}</span>
  </div>
  </div>
  </div>

  <div class="grid__item one-quarter text-right h-100">
  <div class="v-center" style="margin-top: -19px">
    <button class="button__btn button__btn--primary">{{ section.settings.button-label }}</button>
  </div>
  </div>

</div>

{% schema %}
  {
    "name": "Call-to-Action incentive",
    "settings": [
      { 
        "type": "text",
        "label": "Text",
        "id": "copy"
      },
      {
        "type": "text",
        "label": "Button Label",
        "id": "button-label"
      }
    ]
  }
{% endschema %}