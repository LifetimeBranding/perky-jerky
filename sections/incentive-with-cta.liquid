<div class="grid page-width">
  <div class="grid__item two-thirds text-right">
    <span>{{ section.settings.copy}}</span>
  </div>
  <div class="grid__item one-third">
  <button class="button__btn button__btn--primary">{{ section.settings.button-label }}</button>
  </div>
</div>

{% schema %}
  {
    "name": "Call-to-Action incentive",
    "settings": [
      { 
        "type": "text",
        "label": "Text",
        "id": "copy"
      },
      {
        "type": "text",
        "label": "Button Label",
        "id": "button-label"
      }
    ]
  }
{% endschema %}