<div class="grid page-width">

  <!-- Left Side -->
  <div class="grid__item small--one-whole one-third">
    <div id="pick-and-pack-left">
    <!-- Brand Logo -->
      <img src="{{ section.settings.logo | img_url: '124x38' }}" width="124" height="38" alt="Logo" style="margin-bottom: 20px">
      <!-- Pick -n- Pack Banner Image -->
      <img src="{{ section.settings.banner | img_url: '358x124' }}" width="358" height="124" alt="Pick and Pack Banner">
      <span style="font-size: 45px; display: block; margin-top: 40px;">can't decide?</span>
      <span style="font-size: 21px;">try 'em all in one box.</span>
    </div>
  </div>

  <!--<div class="grid__item small--hide one-third">
    <div id="pick-and-pack-centerpiece">
      <img src="{{ section.settings.centerpiece | img_url: '592x744' }}">
    </div>
  </div>-->

  <!-- Right Side -->
  <div class="grid__item small--hide one-third">
    <div id="pick-and-pack-right">
      <ol>
        <li>how many</li>
        <li>what flavors</li>
        <li>delivery date</li>
        <li>pack it!</li>
      </ol>
      <a class="btn button__btn button__btn--secondary" href="{{ pages.pickandpack.url }}">Start Packing</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Pick 'n Pack",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "banner",
        "label": "Banner"
      },
      {
        "type": "image_picker",
        "id": "centerpiece",
        "label": "Centerpiece"
      },
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background"
      }
    ]
  }
{% endschema %}