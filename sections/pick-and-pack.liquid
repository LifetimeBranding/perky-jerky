
<div class="wallpaper" style="background-image: url('{{ section.settings.background | img_url: 'master' }}')">
<div class="grid page-width">

  <!-- Left Side -->
  <div class="grid__item small--one-whole one-half">
    <div id="pick-and-pack-left">
    <!-- Brand Logo -->
      <img src="{{ section.settings.logo | img_url: 'master' }}" 
      srcset="{{ section.settings.logo | img_url: 'master' }} 1x, {{ section.settings.logo | img_url: 'master', scale: 2 }} 2x"
      width="124" height="38" alt="Logo" style="margin-bottom: 20px;">
      <!-- Pick -n- Pack Banner Image -->
      <img src="{{ section.settings.banner | img_url: 'master' }}" 
      srcset="{{ section.settings.banner | img_url: 'master' }} 1x, {{ section.settings.banner | img_url: 'master', scale: 2 }} 2x" 
      width="358" height="124" alt="Pick and Pack Banner">
      <div class="small--hide">
      <h1 class="homepage" style="margin-bottom: 0px">can't decide?</h1>
      <h2 class="homepage" style="margin-top: 0px">try 'em all in one box.</h2>
      </div>
    </div>
  </div>
      <!--Centerpiece -->
      <div style="width: 100%">
      <div id="pick-and-pack-centerpiece">
      <img src="{{ section.settings.centerpiece | img_url: 'master' }}" 
      srcset="{{ section.settings.centerpiece | img_url: 'master' }} 1x, {{ section.settings.centerpiece | img_url: 'master', scale: 2 }} 2x"
      alt="Pick and Pack Box">
      </div>
    </div>
  <!-- Right Side -->
  <div class="grid__item small--hide one-half">
    <div id="pick-and-pack-right">
      <ol>
        <li>how many</li>
        <li>what flavors</li>
        <li>delivery date</li>
        <li>pack it!</li>
      </ol>
      <a class="btn button__btn button__btn--secondary" href="/pages/coming-soon">Start Packing</a>
    </div>
  </div>
</div>
</div>
{% schema %}
  {
    "name": "Pick 'n Pack",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "banner",
        "label": "Banner"
      },
      {
        "type": "image_picker",
        "id": "centerpiece",
        "label": "Centerpiece"
      },
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background"
      }
    ]
  }
{% endschema %}