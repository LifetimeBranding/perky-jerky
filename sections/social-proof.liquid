{% assign items_per_row = 3 %}

<div class="grid h-100">
<div class="grid__item one-whole medium-up--one-half text-center h-100">
<div class="grid">
  <div class="grid__item">
  <h4>{{ section.settings.featured-by | upcase }}</h4>
  </div>
    <div class="proof-container">
      {%- for block in section.blocks -%}
        {%- if block.type == 'featured_by' -%}
          <img src="{{ block.settings.image | img_url: '222x102' }}" alt="{{ block.settings.who }}" width="167" height="77">
        {%- endif -%}
      {%- endfor -%}
    </div>
</div>
</div>

<div class="grid__item one-whole medium-up--one-half text-center h-100" style="background-color: #f2f2f2">
<div class="grid">
  <div class="grid__item">
  <h4>{{ section.settings.retailers | upcase }}</h4>
  </div>
  <div class="grid__item">
    <div class="proof-container">
      <div class="grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'sold_at' -%}
            <img src="{{ block.settings.image | img_url: '222x102' }}" alt="{{ block.settings.who }}" width="167" height="77">
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
</div>

</div>

{% schema %}
{
  "name": "Social Proof",
  "settings": [
    {
      "id": "featured-by",
      "label": "Featured By Heading",
      "type": "text",
      "default": "What they are saying about us"
    },
    {
      "id": "retailers",
      "label": "Retailers Heading",
      "type": "text",
      "default": "Perky Jerky Retailers"
    }
  ],
  "blocks": [
    {
      "name": "Press",
      "type": "featured_by",
      "settings": [
        {
          "id": "who",
          "type": "text",
          "label": "Name"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "url",
          "type": "text",
          "label": "URL"
        }
      ]
    },
    {
      "name": "Retailer",
      "type": "sold_at",
      "settings": [
        {
          "id": "retailer",
          "type": "text",
          "label": "Name"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "url",
          "type": "text",
          "label": "URL"
        }
      ]
    }
  ]
}
{% endschema %}