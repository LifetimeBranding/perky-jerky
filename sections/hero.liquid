<div class="grid">
<div class="grid__item one-whole text-center">


  <div class="hero__container">
    <div class="owl-carousel">
      <div>
        <img src="{{ section.settings.hero-image | img_url: 'master' }}" alt="{{ section.settings.hero-image.alt }}" 
        class="hero__image--background">
      </div>

    </div>
  </div>

  </div>
</div>


{% schema %}
  {
    "name": "Hero Slideshow",
    "max_blocks": 3,
    "blocks": [
      {
        "name": "Hero",
        "type": "image"
      }],
    "settings": [
      {
        "type": "image_picker",
        "id": "hero-image",
        "label": "Hero Image"
    }]
  }
{% endschema %}