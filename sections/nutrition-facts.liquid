<!-- TODO: FIX INLINE SECTIONS -->
<div class="grid page-width">

  <div class="grid__item medium-up--one-half one-whole">
    <img src=" {{ section.settings.featured_image | img_url: '807x807' }}" alt="Dare to be Tender" style="width: 100%; height: 100%">
  </div>
  
  <div class="grid__item medium-up--one-half one-whole">
    <div class="table-container">
      <table>
        <!-- Header Row -->
        <tr> 
          <!-- Columns -->
          <td>          
            <i class="fa fa-info-circle" style="cursor: pointer; display: block;"></i>
            nutrition facts
          </td>
          {% for block in section.blocks %}
            <td>
              <img src="{{block.settings.icon | img_url: '88x63' }}" alt="{{block.settings.image.alt}}" width="66" height="45">
              {{ block.settings.name }}
            </td>
          {% endfor %}
        </tr>
        <!-- total fat row -->
        <tr>
          <td>total fat (g)</td><td>8</td><td>8</td><td>8</td>
        </tr>
        <!-- saturated fat row -->
        <tr>
          <td>saturated fat (g)</td><td>6</td><td>6</td><td>6</td>
        </tr>
        <!-- cholesterol row -->
        <tr>
          <td>cholesterol (mg)</td><td>55</td><td>55</td><td>55</td>
        </tr>
        <!-- sodium row -->
        <tr>
          <td>sodium (mg)</td><td>4</td><td>4</td><td>4</td>
        </tr>
        <!-- carbohydrates -->
        <tr>
          <td>carbohydrates (g)</td><td>44</td><td>44</td><td>44</td>
        </tr>
        <!-- protein row -->
        <tr>
          <td>protein (g)</td><td>6</td><td>6</td><td>6</td>
        </tr>
      </table>
    </div>

     <a class="btn button__btn button__btn--primary" href="{{ 'Jerky' | url_for_type }}">Shop Jerky</a>

  </div>
</div>

{% schema %}
  {
    "name": "Nutrition Facts",
    "settings": [
      {
        "type": "image_picker",
        "label": "Featured Image",
        "id": "featured_image"
      }
    ],

    "max_blocks": 3,
    "blocks": [
      {
        "type": "category",
        "name": "Category",
        "settings": [
          {
            "id": "icon",
            "label": "Icon",
            "type": "image_picker"
          },
          {
            "id": "name",
            "type": "text",
            "label": "Name"
          },
          {
            "id": "total-fat",
            "type": "text",
            "label": "Total Fat (g)"
          },
          {
            "id": "saturated-fat",
            "type": "text",
            "label": "Saturated Fat (g)"
          },
          {
            "id": "cholesterol",
            "type": "text",
            "label": "Cholesterol (mg)"
          },
          {
            "id": "sodium",
            "type": "text",
            "label": "Sodium (mg)"
          },
          {
            "id": "carbs",
            "type": "text",
            "label": "Carbohydrates (g)"
          },
          {
            "id": "protein",
            "type": "text",
            "label": "Protein (g)"
          }
        ]
      }
    ]
  }
{% endschema %}