<div class="page-width grid h-100">

<!-- Breakpoint: Medium Up -->
<div class="grid__item medium-up--one-whole text-center h-100">
  <!-- Section: Showcase Products -->
  <div class="grid">
    <div class="grid__item one-whole">
      <img src="{{ section.settings.header-image | img_url: 'master' }}" width="509" height="294" alt="{{ section.settings.header-image.alt }}" style="margin-top: 78.75px;">
    </div>

    <div style="padding: 0px 30px 0px 30px">

    {%- for block in section.blocks -%}
      <div class="grid__item one-third">
        <div class="section-showcase-collection--item" onclick="showcaseDropdown.show('{{ collections[block.settings.collection].title }}')">
          <img src="{{ collections[block.settings.collection].image | img_url: 'master' }}" width="300" height="382" alt="{{ collections[block.settings.collection].title }}">
          <span>{{ collections[block.settings.collection].title }}</span>
        </div>
      </div>
    {%- endfor -%}

    </div>

    <div class="grid__item one-whole text-right" style="margin-top: 63.75px">
      <a class="btn button__btn button__btn--primary" href="/collections/all">Shop All</a>
    </div>
  </div>

  <!-- TODO: MOVE THIS TO VIEW CONTROLLER -->
  <!-- Dropdown: Product Details -->
  <div id="showcase-collection-dropdown" class="section-showcase-collection__detail--container">
  <div class="grid page-width">
    <div class="grid__item">
      <div class="grid">
        <div class="grid__item one-third">
          <!-- Product Category -->
          <div id="collection-detail-category-container" class="grid">

            <!-- Product Category Image -->
            <div class="grid__item">
              <img src="http://via.placeholder.com/241x316" width="241" height="316" alt="Banner">
            </div>

            <!-- Product Category Names -->
            <div class="grid__item">
              <ul class="inline-list">
              {% for category in (1..3) %}
                <li class="no-bullets">
                  <a href="#">Category {{ category }}</a>
                </li>
              {% endfor %}
              </ul>
            </div>
          </div>
        </div>

        <div class="grid__item two-thirds">
          <!-- Category Flavors -->
          <div id="collection-detail-flavor-container" class="grid">

            {% for i in (1..5) %}
              <div class="grid__item">
                <a href="collections/all">
                  <div class="section-showcase-collection__detail--flavor">
                    Flavor {{ i }}
                  </div>
                </a>
              </div>
            {% endfor %}
              <div class="grid__item">
                <a href="collections/all">
                <div class="section-showcase-collection__detail--flavor">
                    See All
                </div>
              </a>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!-- END MOVE -->
</div>

</div>

{% schema %}
  {
    "name": "Showcase collections",
    "settings": [
      {
        "type": "image_picker",
        "id": "header-image",
        "label": "Heading Banner"
      }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ]
  }
{% endschema %}
